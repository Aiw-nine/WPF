<Window x:Class="WpfApp_Adorner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Adorner"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="myBox" Width="160" Height="50"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 0">
                <Button x:Name="btnAdd" Content="添加" Width="60" Margin="0 0 20 0" Click="btnAdd_Click"/>
                <Button x:Name="btnRemove" Content="移除" Width="60" Click="btnRemove_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
