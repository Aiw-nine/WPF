<Window x:Class="WpfApp_Behavior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:WpfApp_Behavior"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Width="100" Height="30" Margin="40">
                <!--给元素添加行为-->
                <i:Interaction.Behaviors>
                    <local:EffectBehavior/>
                </i:Interaction.Behaviors>
            </TextBox>

            <Button Width="100" Height="30" Margin="40">
                <!--给元素添加行为-->
                <i:Interaction.Behaviors>
                    <local:EffectBehavior/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </Grid>
</Window>
